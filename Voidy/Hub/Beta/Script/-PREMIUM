-- Voidy Hub
-- Supports: Codex, Trigon, KRNL, Delta
-- Mobile & PC Compatible

local Library = loadstring(game:HttpGet('https://raw.githubusercontent.com/UI-Library/Main/main/Source.lua'))()

local Window = Library:CreateWindow({
    Name = 'Voidy Hub',
    Theme = 'Red',
    Background = 'Blossoms in Japan',
    Hideable = true,
    Draggable = true,
    Rounded = true,
    SmoothScrolling = true,
    MinimizeButton = true,
    CloseButton = true
})

local Tabs = {
    Farm = Window:CreateTab('ğŸŒ¸ Farm'),
    Teleport = Window:CreateTab('ğŸŒ¸ Teleport'),
    Player = Window:CreateTab('ğŸŒ¸ Player'),
    Events = Window:CreateTab('ğŸŒ¸ Events'),
    Settings = Window:CreateTab('ğŸŒ¸ Settings')
}

-- Auto Farm
Tabs.Farm:CreateSection('Auto Farm Settings')
Tabs.Farm:CreateToggle('âœ… Auto Farm Level', function(State)
    _G.AutoFarm = State
    while _G.AutoFarm do
        wait()
        -- Auto farm code here
    end
end)

Tabs.Farm:CreateToggle('âœ… Auto Mastery Farm', function(State)
    _G.AutoMastery = State
    while _G.AutoMastery do
        wait()
        -- Auto mastery farm code here
    end
end)

-- Teleport
Tabs.Teleport:CreateSection('Sea Selection')
Tabs.Teleport:CreateButton('ğŸŒŠ Teleport to Sea 1', function()
    -- Teleport code to Sea 1
end)

Tabs.Teleport:CreateButton('ğŸŒŠ Teleport to Sea 2', function()
    -- Teleport code to Sea 2
end)

Tabs.Teleport:CreateButton('ğŸŒŠ Teleport to Sea 3', function()
    -- Teleport code to Sea 3
end)

-- ESP
Tabs.Player:CreateSection('Player Settings')
Tabs.Player:CreateToggle('ğŸ” Player ESP', function(State)
    _G.PlayerESP = State
    while _G.PlayerESP do
        wait()
        -- ESP code here
    end
end)

-- Settings
Tabs.Settings:CreateSection('Visual Settings')
Tabs.Settings:CreateToggle('ğŸŒŸ FPS Boost', function(State)
    if State then
        game:GetService('Lighting').GlobalShadows = false
        game:GetService('Lighting').Brightness = 2
    else
        game:GetService('Lighting').GlobalShadows = true
        game:GetService('Lighting').Brightness = 1
    end
end)

Tabs.Settings:CreateToggle('ğŸŒŸ Full Bright', function(State)
    if State then
        game:GetService('Lighting').Ambient = Color3.fromRGB(255, 255, 255)
    else
        game:GetService('Lighting').Ambient = Color3.fromRGB(127, 127, 127)
    end
end)

Tabs.Settings:CreateToggle('ğŸŒŸ Always Day', function(State)
    if State then
        game:GetService('Lighting').ClockTime = 12
    end
end)

print('Script Loaded Successfully')
